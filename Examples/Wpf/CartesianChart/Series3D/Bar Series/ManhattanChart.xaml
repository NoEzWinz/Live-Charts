<UserControl x:Class="Wpf.CartesianChart.Series3D.Bar_Series.ManhattanChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wpf.CartesianChart.Series3D.Bar_Series"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 

             d:DesignHeight="300" d:DesignWidth="300" d:DataContext="{d:DesignInstance local:ManhattanChart}">
    <Grid>
        <lvc:CartesianChart3D Series="{Binding SeriesCollection}" LegendLocation="Left">
            <lvc:CartesianChart3D.AxisX>
                <lvc:Axis3D Title="Salesman" Labels="{Binding Labels}"></lvc:Axis3D>
            </lvc:CartesianChart3D.AxisX>
            <lvc:CartesianChart3D.AxisY>
                <lvc:Axis3D Title="Sold Apps" LabelFormatter="{Binding Formatter}"></lvc:Axis3D>
            </lvc:CartesianChart3D.AxisY>
        </lvc:CartesianChart3D>
    </Grid>
</UserControl>
